<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%=header %></h1>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Subject Name</th>
        <th>Teacher Name</th>
        <th>Options</th>
      </tr>
        <% let jmlSbj = 1 %>
        <% data_subject.forEach( data => { %>
          <tr>
          <td><%= jmlSbj %><% jmlSbj+=1 %></td>
          <td><%= data.subject_name %> </td>
          <td>
          <% if (data.Teachers.length != 0) { %>
          <% let jmlTcr = 0 %>
          <% for (let i = 0 ; i < data.Teachers.length ; i++) { %>
          <% jmlTcr+=1 %>
          <%= jmlTcr %>.<%= data.Teachers[i].first_name %> <%= data.Teachers[i].last_name %><br>
          <% } %>
          <% } %>
          </td>
          <td><a href="/subjects/edit/<%= data.id %>">edit</a>
          <a href="/subjects/delete/<%= data.id %>">delete</a></td>
          </tr>
        <% }) %> 
    </table>
    <br>
    <a href="/">index page</a>
  </body>
</html>
